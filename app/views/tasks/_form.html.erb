<%= form_with model: @task do |f| %>
  <%= f.label :title, "Tersk Tertle:" %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details, "Tersk Dertles:" %>
  <%= f.text_field :details, class: "form-control"%>
  <%= f.label :completed, "Kermplert?" %>
  <%= f.check_box :completed, class: "form-check" %>
  <%= f.submit "Merk Ert!", class: "btn btn-primary"%>
<% end %>

<% @task.errors.full_messages.each do |msg| %>
  <p class='text-danger'><%= msg %></p>
<% end %>
